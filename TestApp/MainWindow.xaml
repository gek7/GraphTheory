<Window x:Class="TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestApp"
        xmlns:out="clr-namespace:GraphTheory;assembly=GraphTheory"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10">
            <TextBox x:Name="tb_font" Height="30" Width="100" FontSize="20"/>
            <Button Content="OK" Width="50" Click="Button_Click"/>
        </StackPanel>
        <out:GraphControl Name="GraphComp" PeekColor="Red" PeekWidth="50"/>
    </DockPanel>
</Window>
