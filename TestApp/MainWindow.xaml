<Window x:Class="TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestApp"
        xmlns:tlkit ="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        xmlns:out="clr-namespace:GraphTheory;assembly=GraphTheory"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <ToolBar DockPanel.Dock="Top">
            <tlkit:ColorPicker x:Name="ClrPick" Width="100" SelectedColorChanged="ClrPick_SelectedColorChanged"/>
            <RadioButton x:Name="addPeak" Content="Peak" Click="AddPeak_Click"/>
            <RadioButton x:Name="addEdge" Content="Edge" Click="AddPeak_Click"/>
        </ToolBar>
        <out:GraphControl x:Name="GraphComp"  PeakColor="White" AutoWork="False"/>

    </DockPanel>
</Window>
