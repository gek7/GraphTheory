<UserControl x:Class="GraphTheory.GraphControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphTheory"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="387*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="canv" Background="White" MouseLeftButtonDown="Canv_MouseLeftButtonDown" MouseDown="canv_MouseDown" Grid.ColumnSpan="2"/>
        <Expander Grid.Column="0" ExpandDirection="Right" Name="exp" Background="White">
            <StackPanel Orientation="Vertical">
                <RadioButton x:Name="addPeak" Content="Peak" IsChecked="True" Click="addPeak_Click"/>
                <RadioButton x:Name="addEdge" Content="Edge" Click="addEdge_Click"/>
            </StackPanel>
        </Expander>
    </Grid>

</UserControl>
